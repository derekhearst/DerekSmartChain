<UserControl x:Class="DerekSmartWPF.Pages.AddPrinterPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DerekSmartWPF.Pages"
             xmlns:cc="clr-namespace:DerekSmartWPF.CustomControls"
             xmlns:tk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <ProgressBar IsIndeterminate="True" Height="10" DockPanel.Dock="Top"/>
        <UniformGrid Rows="1" DockPanel.Dock="Top">
            <Button Content="Refresh Printer List"/>
            
            <Button Content="Add Printer Manually" Click="RefreshButtonClick"/>
        </UniformGrid>
        
        <ScrollViewer DockPanel.Dock="Bottom">
            <WrapPanel>
                <cc:AddPrinterPrinterDisplay/>
                <cc:AddPrinterPrinterDisplay/>
                <cc:AddPrinterPrinterDisplay/>
                <cc:AddPrinterPrinterDisplay/>
            </WrapPanel>
        </ScrollViewer>
    </DockPanel>
</UserControl>
