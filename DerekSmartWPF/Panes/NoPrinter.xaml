<Page
    x:Class="DerekSmart.Panes.NoPrinter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DerekSmart.Panes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel>
        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="250" Text="&#xE171;" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="20"/>
        <TextBlock Text="You haven't added a printer to DerekSmart yet, press the button below to add a printer and start printing." HorizontalAlignment="Center" FontSize="20" Margin="20"/>
        <Button Content="Add A Printer" HorizontalAlignment="Center" Margin="20" FontSize="50" Background="{StaticResource SystemAccentColor}" Foreground="White" CornerRadius="20" Click="Button_Click"/>
    </StackPanel>
</Page>
